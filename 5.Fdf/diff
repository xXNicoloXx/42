void	ft_line_direction_pt3(float dx, float unity, float tmp, t_map *m)
{
	int	i;

	i = 0;
	if (m->line.reverse == 1)
	{
		tmp = m->line.hcolor1;
		m->line.hcolor1 = m->line.hcolor2;
		m->line.hcolor2 = tmp;
	}
	while (i++ < dx)
	{
		ft_draw(m, m->line.ax, m->line.ay, ft_color_line(dx, i, m));
		m->line.ay = m->line.ay + unity;
		m->line.ax++;
	}
}